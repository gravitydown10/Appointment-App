@model AppointmentApp.ViewModels.CreateUserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="create_account">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-offset-4 col-md-4 create_form">

                @using (Html.BeginForm("StoreData", "Registration"))
                {
                    @Html.ValidationSummary(true, "Please follow the instructions below")
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Name)
                        @Html.TextBoxFor(u => u.User.Name, new { @class = "form-control", placeholder = "Your Name" })
                        @Html.ValidationMessageFor(u => u.User.Name)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Email)
                        @Html.TextBoxFor(u => u.User.Email, new { @class = "form-control", placeholder = "Your Email" })
                        @Html.ValidationMessageFor(u => u.User.Email)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Telephone)
                        @Html.TextBoxFor(u => u.User.Telephone, new { @class = "form-control", placeholder = "Telephone Number" })
                        @Html.ValidationMessageFor(u => u.User.Telephone)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Mobile)
                        @Html.TextBoxFor(u => u.User.Mobile, new { @class = "form-control", placeholder = "Mobile Number" })
                        @Html.ValidationMessageFor(u => u.User.Mobile)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Address)
                        @Html.TextAreaFor(u => u.User.Address, new { @class = "form-control", placeholder = "Your Address" })
                        @Html.ValidationMessageFor(u => u.User.Address)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.RoleId)
                        @Html.DropDownListFor(u => u.User.RoleId, new SelectList(Model.Roles, "Id", "RoleName"), "Select Role", new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.User.RoleId)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.Password)
                        @Html.PasswordFor(u => u.User.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(u => u.User.Password)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.User.ConfirmPassword)
                        @Html.PasswordFor(u => u.User.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        @Html.ValidationMessageFor(u => u.User.ConfirmPassword)
                    </div>
                    @Html.AntiForgeryToken()
                    <button class="btn btn-default">Create Account</button>
                    @Html.ActionLink("Already have an account?", "LogIn")
                   
                }
            </div>
        </div>
    </div>
</section>

