@model AppointmentApp.Models.Image
@{
    ViewBag.Title = "UploadPhoto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="upload-image col-lg-3">
            <h2>Upload your image</h2>

            @using (Html.BeginForm("StoreImage", "User", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(ui => ui.ImageContent)
                    <input type="file" name="file" id="ImageContent" />
                </div>
                @Html.AntiForgeryToken()
                <button class="btn btn-default">Upload</button>
                @Html.ActionLink("back to previous", "Index", "User")
            }

        </div>

    </div>
</div>

